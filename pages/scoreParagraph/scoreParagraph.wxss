@import "../../static/icons/icon.wxss";

.content-container {
    width: 100%;
    height: 100%;
    position: absolute;
}

/*筛选头部*/
.header {
    width: 100%;
    position: fixed;
    height: 50rpx;
    border-bottom: 1.5rpx solid #E0E3DA;
    border-top: 1.5rpx solid #E0E3DA;
    display: flex;
}
.header-view {
    width: 50%;
    display: flex;
    justify-content: center;
}

/*滚动省份*/
.scroll-province{
    width: 100%;
    height: 800rpx;
    z-index: 2;
    position: absolute;
    top: 50rpx;
    background-color: white;
}

/*滚动年份*/
.scroll-year{
    width: 100%;
    height: 300rpx;
    z-index: 2;
    position: absolute;
    top: 50rpx;
    background-color: white;
}
/*滚动条件*/
.item{
    margin-left: 30rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}

/*遮罩层*/
.shadow {
    position: absolute;
    top: 50rpx;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 2;
}

/*滚动内容*/
.scroll-content {
    position: absolute;
    top: 50rpx;
    bottom: 0rpx;
    width: 100%;
    display: flex;
    justify-content: center;
    z-index: 1;
}


/*内容标题*/
.titleView {
    display: flex;
    opacity: 0.6;
    border-bottom: 1.5rpx solid #E0E3DA;
    height: 40rpx;
    font-size: 27rpx;
}


