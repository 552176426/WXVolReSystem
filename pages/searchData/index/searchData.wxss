.view-container {
    width: 100%;
    display: flex;
    justify-content: center;
    background-color: rgb(247, 247, 247);
}

.menu-view {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    background-color: white;
    border-radius: 25rpx;
    margin-top: 20rpx;
    padding-bottom: 20rpx;
    box-shadow:10rpx 10rpx 1rpx rgb(240,240,240);
}

.menu-item {
    display: flex;
    flex-direction: column;
    width: 25%;
    justify-content: center;
    align-items: center;
    margin-top: 20rpx;
}

.rankTitle {
    margin-left: 30rpx;
    font-weight: bold;
    font-size: 25rpx;
    padding-top: 20rpx;
    margin-bottom: 40rpx;
}

.seeMore {
    display: flex;
    justify-content: center;
    font-size: 20rpx;
    color: #1888f7;
    padding-bottom: 20rpx;
}

.index-1 {
    border-bottom: 4rpx solid #FDC818;
    color: #FDC818;
    font-weight: bold;
}

.index-2 {
    border-bottom: 4rpx solid #FD9D3B;
    color: #FD9D3B;
    font-weight: bold;
}

.index-3 {
    border-bottom: 4rpx solid #93AEFC;
    color: #93AEFC;
    font-weight: bold;
}


.item-view {
    width: 100%;
    margin-left: 10%;
    position: relative;
    display: flex;
    align-items: center;
}

.item-name {
    font-weight: bold;
    font-size: 28rpx;
    margin-left: 15rpx;
}