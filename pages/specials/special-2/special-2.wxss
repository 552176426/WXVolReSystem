.container{
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    background-color: rgb(245,245,245);
}

.header{
    background-color: white;
    border-top: 3rpx solid rgba(230,230,230,0.9);
    border-bottom: 1rpx solid rgba(230,230,230,1);
    width: 100%;
    height: 180rpx;
    display: flex;
    align-items: center;
    margin-bottom: 25rpx;
}

.down{
    background-color: white;
    border-bottom: 1rpx solid rgba(230,230,230,1);
    width: 100%;
    height: 180rpx;
    display: flex;
    align-items: center;
    box-sizing: border-box;
}
.header-lines{
    margin-left: 35rpx;
    height: 100rpx;
    width: 100%;
}
.header-line1{
    font-size: 35rpx;
    font-weight: bold;
}
.down-line1{
    font-size: 30rpx;
    font-weight: bold;
}
.header-line2{
    display: flex;
    flex-direction: row;
    padding-right: 20rpx;
    margin-top: 20rpx;
    width: 100%;
}
.header-line2 text{
    font-size: 20rpx;
    opacity: 0.5;
}