/**index.wxss**/

.view-left {
    position: absolute;
    top: 76rpx;
    bottom: 0rpx;
    width: 25%;
    background-color: rgb(245, 245, 245);
}

.view-right {
    position: absolute;
    top: 76rpx;
    bottom: 0rpx;
    left: 25%;
    width: 75%;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.container {
    width: 100%;
}

.header {
    font-size: 32rpx;
    font-weight: bold;
    width: 100%;
    height: 90rpx;
    display: flex;
    align-items: center;
    margin-left: 40rpx;
}

.text-left {
    margin-top: 13rpx;
    border-left: 7rpx solid #1888f7;
    height: 35rpx;
    border-radius: 30rpx;
    margin-left: 2rpx;
}

.left-item {
    width: 100%;
    height: 90rpx;
    display: flex;
    align-items: center;
    font-size: 23rpx;
}

.left-item1 {
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    font-size: 23rpx;
}

.right-item {
    width: 50%;
    height: 170rpx;
    border-top: 1rpx solid rgb(230, 230, 230);
    border-right: 1rpx solid rgb(230, 230, 230);
    border-bottom: 1rpx solid rgb(230, 230, 230);
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
}


.right-items {
    display: flex;
    flex-direction: row;
    width: 100%;
    flex-wrap: wrap;
}