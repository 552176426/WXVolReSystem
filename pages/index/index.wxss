/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.container {
  height: auto;
  overflow: hidden;
  width: 100%;
}

.btn-group {
  /* border: 1px solid black; */
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-group_item {
  width: 70px;
  height: 140rpx;
  background: #fff;
  text-align: center;
  position: relative;
}

.btn-group_item_image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 30rpx;
}

.btn-group_item_text {
  /* border: 1px solid black; */
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #555;
}

.separate {
  background: #aa8f18;
  width: 100%;
  height: 3rpx;
}