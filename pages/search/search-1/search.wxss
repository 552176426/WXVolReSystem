
.search-container {
    border: 1rpx solid rgb(240, 240, 240);
    border-radius: 50rpx;
    height: 70rpx;
    width: 85%;
    display: flex;
    align-items: center;
}

.history-item {
    border-radius: 25rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    padding-left: 30rpx;
    padding-right: 30rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    background-color: white;
    font-size: 20rpx;
}

.school-item {
    border-radius: 10rpx;
    display: flex;
    justify-content: center;
    width: 100%;
    align-items: center;
    background-color: white;
    margin-top: 30rpx;
}